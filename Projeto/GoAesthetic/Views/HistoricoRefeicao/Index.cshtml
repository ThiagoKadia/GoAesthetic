@model List<GoAestheticEntidades.Entities.RegistroRefeicoesViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Histórico de Refeições</title>
    <link rel="stylesheet" href="~/css/HistoricoRefeicao.css">
</head>
<body>
    <div class="main">
        <div class="meal-list">
            @if (Model.Count == 0)
            {
                <h2 class="no-images">Nenhuma Refeição para ser exibida</h2>
            }

            @foreach (var refeicao in Model)
            {
                <div class="meal-item" onclick="window.location.href = '/RegistrarRefeicoes/InformacoesRefeicao?refeicaoId=@refeicao.Id';">
                    <div class="meal-card">
                        <h3>@refeicao.Nome</h3>
                        <p>Calorias: @refeicao.TotalCalorias</p>
                        <p>Grama: @refeicao.TotalQuantidade</p>
                        <p>Data: @refeicao.DataInclusao.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            }
        </div>

    </div>
</body>
</html>
